<form class="box">
    
  <div class="field">
    <label class="label">Username</label>
    <div class="control">
      <input id="username-login" class="input" type="text" placeholder="e.g. alex1234">
    </div>
  </div>

  <div class="field">
    <label class="label">Email</label>
    <div class="control">
      <input id="email-login" class="input" type="email" placeholder="e.g. alex@example.com">
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <input id="password-login" class="input" type="password" placeholder="********">
    </div>
  </div>

  <button class="button is-primary">Sign in</button>
  
</form>

<script src="/js/login.js"></script>